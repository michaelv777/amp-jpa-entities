<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="amp-jpa-entities-mysql-static" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.amp.jpa.entities.Category</class>
		<class>com.amp.jpa.entities.Client</class>
		<class>com.amp.jpa.entities.ConfigurationtypeM</class>
		<class>com.amp.jpa.entities.Credential</class>
		<class>com.amp.jpa.entities.Node</class>
		<class>com.amp.jpa.entities.Nodeproperty</class>
		<class>com.amp.jpa.entities.Nodeshierarchy</class>
		<class>com.amp.jpa.entities.NodeshierarchyPK</class>
		<class>com.amp.jpa.entities.NodetypeM</class>
		<class>com.amp.jpa.entities.OperationtypeM</class>
		<class>com.amp.jpa.entities.Parameter</class>
		<class>com.amp.jpa.entities.ParametertypeM</class>
		<class>com.amp.jpa.entities.RequesttypeM</class>
		<class>com.amp.jpa.entities.RequesttypeParameter</class>
		<class>com.amp.jpa.entities.ResponsetypeM</class>
		<class>com.amp.jpa.entities.ResponsetypeParameter</class>
		<class>com.amp.jpa.entities.Source</class>
		<class>com.amp.jpa.entities.SourcetypeM</class>
		<class>com.amp.jpa.entities.SourcetypeRequesttypeM</class>
		<class>com.amp.jpa.entities.SourcetypeResponsetypeM</class>
		<class>com.amp.jpa.entities.StatusM</class>
		<class>com.amp.jpa.entities.Target</class>
		<class>com.amp.jpa.entities.TargettypeM</class>
		<class>com.amp.jpa.entities.Thread</class>
		<class>com.amp.jpa.entities.ThreadConfiguration</class>
		<class>com.amp.jpa.entities.ThreadScopeCredential</class>
		<class>com.amp.jpa.entities.Worker</class>
		<class>com.amp.jpa.entities.WorkerConfiguration</class>
		<class>com.amp.jpa.entities.WorkerData</class>
		<class>com.amp.jpa.entities.WorkerThread</class>
		<class>com.amp.jpa.entities.WorkerThreadScope</class>
		
		<properties>
			<property name="hibernate.archive.autodetection" value="class" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLInnoDBDialect" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3307/allmarket" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.connection.password" value="root" />
			<property name="hibernate.show_sql" value="true"/>
			<property name="transaction.factory_class" value="org.hibernate.transaction.JDBCTransactionFactory"/>
			<property name="hibernate.current_session_context_class" value="thread"/> 
            <!-- <property name="hibernate.transaction.manager_lookup_class" value="org.hibernate.transaction.TransactionManagerLookup"/> -->
		</properties>
	</persistence-unit>
        
</persistence>
